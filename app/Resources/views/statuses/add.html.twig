{% extends 'base.html.twig' %}

{% block breadcrumbs %}
<ol class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li><a href="{{ path('status_list') }}">Statuses list</a></li>
    <li><a href="">Add status</a></li>
</ol>
{% endblock %}

{% block body %}
    {% form_theme form 'form_theme.html.twig' %}
    {{ form_start(form, {'attr':{'novalidate':'novalidate'}}) }}
        {{ form_row(form.name) }}
        {{ form_row(form.isActive) }}
        {{ form_row(form.reset) }}
        {{ form_row(form.save) }}
    {{ form_end(form) }}
{% endblock %}
